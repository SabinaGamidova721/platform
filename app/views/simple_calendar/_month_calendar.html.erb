<style>
.custom-month-link {
  text-decoration: none;
  color: black; 
  font-weight: bold; 
  font-size: 30px;
  margin-left: 10px;
  margin-right: 10px;
}

.custom-month-link-red {
  color: #bf0000; 
  text-decoration: none;
  font-weight: bold; 
  font-size: 30px;
  margin-left: 10px;
  margin-right: 10px;
}

.custom-month-link:hover {
  color: grey; 
}

.custom-month-link-red:hover {
  color: red; 
}

.calendar-title {
    font-size: 24px;
    color: #bf0000;
    font-weight: bold; 
}

.calendar-title:hover {
  color: red; 
}
</style>

<div class="simple-calendar">
  <div class="calendar-heading">
    <time datetime="<%= start_date.strftime('%Y-%m') %>" class="calendar-title"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></time>

    <nav style="text-align: center; margin-bottom: 30px;">
      <%= link_to t('simple_calendar.previous', default: '<<'), calendar.url_for_previous_view, class: 'custom-month-link' %>
      <%= link_to t('simple_calendar.today', default: t('calendar.today_title')), calendar.url_for_today_view, class: 'custom-month-link-red' %>
      <%= link_to t('simple_calendar.next', default: '>>'), calendar.url_for_next_view, class: 'custom-month-link' %>
    </nav>
  </div>

  <table class="table table-striped">
    <thead>
      <tr>
        <% date_range.slice(0, 7).each do |day| %>
          <th><%= t('date.abbr_day_names')[day.wday] %></th>
        <% end %>
      </tr>
    </thead>

    <tbody>
      <% date_range.each_slice(7) do |week| %>
        <tr>
          <% week.each do |day| %>
            <%= content_tag :td, class: calendar.td_classes_for(day) do %>
              <% instance_exec(day, calendar.sorted_events_for(day), &passed_block) %>
            <% end %>
          <% end %>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
